        <!-- Enhanced research highlights -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 animate-slide-up" style="animation-delay: 1s;">
          <div class="bg-slate-800/50 backdrop-blur-sm rounded-lg p-4 border border-blue-500/20 hover:border-blue-500/40 transition-all">
            <div class="text-blue-400 text-2xl mb-2">ðŸ¤–</div>
