---
import ParticleBackground from './ParticleBackground.astro';
---

<section id="hero" class="min-h-screen flex items-center justify-center relative overflow-hidden">
  <ParticleBackground />
  
  <!-- Gradient overlay for readability -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-900/90 via-slate-800/80 to-slate-900/90 z-10"></div>
  
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-20">
    <div class="max-w-6xl mx-auto text-center">
      <!-- Header with professional links -->
      <div class="mb-8 animate-fade-in">
        <div class="flex justify-center items-center space-x-6 mb-6">
          <a href="/cv.pdf" target="_blank" 
             class="px-4 py-2 bg-slate-800/60 backdrop-blur-sm rounded-lg text-gray-300 hover:text-white hover:bg-slate-700/80 transition-all border border-slate-700/50">
            <i class="fas fa-file-pdf mr-2"></i>CV
          </a>
          <a href="https://scholar.google.com/citations?user=yourid" target="_blank" 
             class="px-4 py-2 bg-slate-800/60 backdrop-blur-sm rounded-lg text-gray-300 hover:text-white hover:bg-slate-700/80 transition-all border border-slate-700/50">
            <i class="fas fa-graduation-cap mr-2"></i>Google Scholar
          </a>
          <a href="https://arclab.mit.edu" target="_blank" 
             class="px-4 py-2 bg-red-600/20 backdrop-blur-sm rounded-lg text-red-300 hover:text-red-200 hover:bg-red-600/30 transition-all border border-red-500/30">
            <i class="fas fa-university mr-2"></i>MIT ArcLab
          </a>
        </div>
      </div>
      
      <!-- Main content -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <!-- Text content -->
        <div class="text-center lg:text-left space-y-8 animate-fade-in">
          <div class="space-y-6">
            <h1 class="text-5xl lg:text-6xl font-light leading-tight">
              <span class="block text-white animate-slide-up">Alejandro Carrasco</span>
              <span class="block text-xl lg:text-2xl text-gray-400 font-light mt-4 animate-slide-up" style="animation-delay: 0.2s;">
                AI Researcher & Robotics Engineer
              </span>
              <span class="block text-lg text-red-400 font-medium mt-2 animate-slide-up" style="animation-delay: 0.4s;">
                MIT â€¢ PhD Candidate
              </span>
            </h1>
          </div>
          
          <p class="text-lg text-gray-300 max-w-2xl mx-auto lg:mx-0 leading-relaxed animate-slide-up" style="animation-delay: 0.6s;">
            Developing intelligent systems that bridge the gap between artificial intelligence and robotics, 
            with focus on <span class="text-blue-400">Large Language Models</span>, 
            <span class="text-purple-400">autonomous agents</span>, and 
            <span class="text-cyan-400">space robotics</span>.
          </p>
          
          <!-- Social Links -->
          <div class="flex justify-center lg:justify-start space-x-4 animate-slide-up" style="animation-delay: 0.8s;">
            <a href="https://github.com/yourusername" target="_blank" 
               class="w-12 h-12 bg-slate-800/60 backdrop-blur-sm rounded-full flex items-center justify-center text-gray-400 hover:text-white hover:bg-slate-700/80 transition-all hover:scale-110 border border-slate-700/50">
              <i class="fab fa-github text-lg"></i>
            </a>
            <a href="https://linkedin.com/in/yourusername" target="_blank" 
               class="w-12 h-12 bg-slate-800/60 backdrop-blur-sm rounded-full flex items-center justify-center text-gray-400 hover:text-white hover:bg-slate-700/80 transition-all hover:scale-110 border border-slate-700/50">
              <i class="fab fa-linkedin text-lg"></i>
            </a>
            <a href="https://x.com/yourusername" target="_blank" 
               class="w-12 h-12 bg-slate-800/60 backdrop-blur-sm rounded-full flex items-center justify-center text-gray-400 hover:text-white hover:bg-slate-700/80 transition-all hover:scale-110 border border-slate-700/50">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <a href="mailto:acarrasco@mit.edu" 
               class="w-12 h-12 bg-slate-800/60 backdrop-blur-sm rounded-full flex items-center justify-center text-gray-400 hover:text-white hover:bg-slate-700/80 transition-all hover:scale-110 border border-slate-700/50">
              <i class="fas fa-envelope text-lg"></i>
            </a>
          </div>
        </div>
        
        <!-- Professional Photo -->
        <div class="flex justify-center lg:justify-end animate-fade-in" style="animation-delay: 0.3s;">
          <div class="relative">
            <div class="relative w-80 h-80 lg:w-96 lg:h-96 rounded-full overflow-hidden border-2 border-slate-700/50 shadow-2xl">
              <img 
                src="/src/assets/images/carrusk_zen.png" 
                alt="Alejandro Carrasco" 
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
              />
            </div>
          </div>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <a href="#research" class="text-gray-500 hover:text-gray-300 transition-colors">
          <div class="w-6 h-10 border-2 border-gray-500 rounded-full flex justify-center">
            <div class="w-1 h-3 bg-gray-500 rounded-full mt-2 animate-pulse"></div>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>