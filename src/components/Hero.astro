---
import ParticleBackground from './ParticleBackground.astro';
import ScholarProfile from './ScholarProfile.astro';
---

<section id="hero" class="min-h-screen flex items-center justify-center relative overflow-hidden">
  <ParticleBackground />
  
  <!-- Gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-900/95 via-slate-800/90 to-slate-900/95 z-10"></div>
  
  <div class="arclab-container relative z-20">
    <div class="max-w-7xl mx-auto">
      <!-- Professional links header -->
      <div class="text-center mb-8 arclab-fade-in">
        <div class="flex justify-center items-center space-x-6 mb-6">
          <a href="/cv.pdf" target="_blank" class="arclab-button-secondary">
            <i class="fas fa-file-pdf"></i>CV
          </a>
          <a href="https://scholar.google.com/citations?user=6KamS70AAAAJ&hl=en" target="_blank" class="arclab-button-secondary">
            <i class="fas fa-graduation-cap"></i>Google Scholar
          </a>
          <a href="https://aeroastro.mit.edu/arclab/" target="_blank" class="arclab-button">
            <i class="fas fa-university"></i>MIT ARC Lab
          </a>
        </div>
      </div>
      
      <!-- Main content grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-center">
        <!-- Text content -->
        <div class="lg:col-span-2 space-y-8 arclab-fade-in">
          <div class="space-y-6">
            <h1 class="arclab-heading-1">
              <span class="block arclab-slide-up">Alejandro Carrasco</span>
              <span class="block text-xl lg:text-2xl arclab-text font-light mt-4 arclab-slide-up" style="animation-delay: 0.2s;">
                AI Researcher & Robotics Engineer
              </span>
              <span class="block text-lg arclab-text-accent font-medium mt-2 arclab-slide-up" style="animation-delay: 0.4s;">
                MIT ARC Lab â€¢ Master's Student
              </span>
            </h1>
          </div>
          
          <p class="text-lg arclab-text max-w-3xl leading-relaxed arclab-slide-up" style="animation-delay: 0.6s;">
            Developing intelligent systems that bridge artificial intelligence and robotics, 
            with focus on <span class="arclab-text-accent">Large Language Models</span>, 
            <span class="text-purple-400">autonomous agents</span>, and 
            <span class="text-cyan-400">space robotics</span> for next-generation exploration missions.
          </p>
          
          <!-- Social Links -->
          <div class="flex space-x-4 arclab-slide-up" style="animation-delay: 0.8s;">
            <a href="https://github.com/yourusername" target="_blank" class="w-12 h-12 arclab-card rounded-full flex items-center justify-center arclab-text hover:text-white transition-all hover:scale-110">
              <i class="fab fa-github text-lg"></i>
            </a>
            <a href="https://linkedin.com/in/yourusername" target="_blank" class="w-12 h-12 arclab-card rounded-full flex items-center justify-center arclab-text hover:text-white transition-all hover:scale-110">
              <i class="fab fa-linkedin text-lg"></i>
            </a>
            <a href="https://x.com/yourusername" target="_blank" class="w-12 h-12 arclab-card rounded-full flex items-center justify-center arclab-text hover:text-white transition-all hover:scale-110">
              <i class="fab fa-x-twitter text-lg"></i>
            </a>
            <a href="mailto:acarrasco@mit.edu" class="w-12 h-12 arclab-card rounded-full flex items-center justify-center arclab-text hover:text-white transition-all hover:scale-110">
              <i class="fas fa-envelope text-lg"></i>
            </a>
          </div>
        </div>
        
        <!-- Scholar profile and photo -->
        <div class="space-y-6 arclab-fade-in" style="animation-delay: 0.3s;">
          <!-- Professional Photo -->
          <div class="flex justify-center">
            <div class="relative">
              <div class="relative w-64 h-64 rounded-full overflow-hidden border-2 border-slate-700/50 shadow-2xl">
                <img 
                  src="/src/assets/images/carrusk_zen.png" 
                  alt="Alejandro Carrasco" 
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
                />
              </div>
            </div>
          </div>
          
          <!-- Scholar Profile Card -->
          <ScholarProfile />
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <a href="#research" class="arclab-text hover:text-gray-300 transition-colors">
          <div class="w-6 h-10 border-2 border-gray-500 rounded-full flex justify-center">
            <div class="w-1 h-3 bg-gray-500 rounded-full mt-2 animate-pulse"></div>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>