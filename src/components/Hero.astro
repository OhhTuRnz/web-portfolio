---
---

<section id="hero" class="min-h-screen flex items-center justify-center relative overflow-hidden pt-16">
  <!-- Subtle geometric background -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
    <!-- Minimal circuit pattern overlay -->
    <div class="absolute inset-0 opacity-[0.03]">
      <svg class="w-full h-full" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="minimal-circuit" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M 20,0 L 20,20 M 0,20 L 40,20" stroke="#60a5fa" stroke-width="0.5" fill="none"/>
            <circle cx="20" cy="20" r="1" fill="#60a5fa"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#minimal-circuit)"/>
      </svg>
    </div>
    
    <!-- Subtle floating dots -->
    <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-blue-400/20 rounded-full animate-pulse"></div>
    <div class="absolute top-3/4 right-1/4 w-1 h-1 bg-purple-400/30 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 right-1/3 w-1.5 h-1.5 bg-cyan-400/25 rounded-full animate-pulse" style="animation-delay: 4s;"></div>
  </div>
  
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center max-w-6xl mx-auto">
      <!-- Content -->
      <div class="text-center lg:text-left space-y-8 animate-fade-in">
        <div class="space-y-6">
          <h1 class="text-5xl lg:text-6xl font-light leading-tight">
            <span class="block text-gray-300 animate-slide-up">Hi, I'm</span>
            <span class="block bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent font-medium animate-slide-up" style="animation-delay: 0.2s;">
              Alejandro
            </span>
            <span class="block text-white font-medium animate-slide-up" style="animation-delay: 0.4s;">Carrasco</span>
          </h1>
          <p class="text-xl text-gray-400 font-light animate-slide-up" style="animation-delay: 0.6s;">
            AI Researcher & Robotics Engineer at <span class="text-red-400 font-medium">MIT</span>
          </p>
        </div>
        
        <p class="text-lg text-gray-400 max-w-2xl mx-auto lg:mx-0 leading-relaxed animate-slide-up" style="animation-delay: 0.8s;">
          Specializing in <span class="text-blue-400">Large Language Models</span>, 
          <span class="text-purple-400">autonomous agents</span>, and 
          <span class="text-cyan-400">robotics</span>. 
          Pushing the boundaries of AI to create intelligent systems that can reason, learn, and adapt.
        </p>
        
        <!-- Social Links -->
        <div class="flex justify-center lg:justify-start space-x-4 animate-slide-up" style="animation-delay: 1s;">
          <a href="https://github.com/yourusername" target="_blank" 
             class="w-12 h-12 bg-slate-800/60 backdrop-blur-sm rounded-full flex items-center justify-center text-gray-400 hover:text-white hover:bg-slate-700/80 transition-all hover:scale-110 border border-slate-700/50">
            <i class="fab fa-github text-lg"></i>
          </a>
          <a href="https://linkedin.com/in/yourusername" target="_blank" 
             class="w-12 h-12 bg-slate-800/60 backdrop-blur-sm rounded-full flex items-center justify-center text-gray-400 hover:text-white hover:bg-slate-700/80 transition-all hover:scale-110 border border-slate-700/50">
            <i class="fab fa-linkedin text-lg"></i>
          </a>
          <a href="https://x.com/yourusername" target="_blank" 
             class="w-12 h-12 bg-slate-800/60 backdrop-blur-sm rounded-full flex items-center justify-center text-gray-400 hover:text-white hover:bg-slate-700/80 transition-all hover:scale-110 border border-slate-700/50">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href="https://scholar.google.com/citations?user=yourid" target="_blank" 
             class="w-12 h-12 bg-slate-800/60 backdrop-blur-sm rounded-full flex items-center justify-center text-gray-400 hover:text-white hover:bg-slate-700/80 transition-all hover:scale-110 border border-slate-700/50">
            <i class="fas fa-graduation-cap text-lg"></i>
          </a>
          <a href="mailto:acarrasco@mit.edu" 
             class="w-12 h-12 bg-slate-800/60 backdrop-blur-sm rounded-full flex items-center justify-center text-gray-400 hover:text-white hover:bg-slate-700/80 transition-all hover:scale-110 border border-slate-700/50">
            <i class="fas fa-envelope text-lg"></i>
          </a>
        </div>
        
        <!-- CTA Button -->
        <div class="pt-4 animate-slide-up" style="animation-delay: 1.2s;">
          <a href="#projects" 
             class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-cyan-600 text-white font-medium rounded-full hover:from-blue-700 hover:to-cyan-700 transition-all transform hover:scale-105 shadow-lg hover:shadow-xl">
            Explore My Research
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Professional Photo -->
      <div class="flex justify-center lg:justify-end animate-fade-in" style="animation-delay: 0.5s;">
        <div class="relative">
          <!-- Subtle glow effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-cyan-500/20 rounded-full blur-3xl"></div>
          
          <div class="relative w-80 h-80 lg:w-96 lg:h-96 rounded-full overflow-hidden border-2 border-slate-700/50 shadow-2xl">
            <img 
              src="/src/assets/images/carrusk_zen.png" 
              alt="Alejandro Carrasco" 
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
            />
          </div>
          
          <!-- Floating badges -->
          <div class="absolute -bottom-4 -right-4 bg-slate-800/90 backdrop-blur-sm rounded-full px-4 py-2 border border-blue-500/30 shadow-lg">
            <span class="text-sm font-medium text-blue-400">MIT PhD</span>
          </div>
          <div class="absolute -top-4 -left-4 bg-slate-800/90 backdrop-blur-sm rounded-full px-3 py-1 border border-purple-500/30 shadow-lg">
            <span class="text-xs font-medium text-purple-400">AI Researcher</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#about" class="text-gray-500 hover:text-gray-300 transition-colors">
      <div class="w-6 h-10 border-2 border-gray-500 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-gray-500 rounded-full mt-2 animate-pulse"></div>
      </div>
    </a>
  </div>
</section>