---
import { projects } from '../data/publications.js';

const featuredProjects = projects.filter(p => p.status === 'active').slice(0, 2);
const otherProjects = projects.filter(p => !featuredProjects.includes(p));
---

<section id="projects" class="arclab-section bg-slate-900">
  <div class="arclab-container">
    <div class="text-center mb-16 arclab-fade-in">
      <h2 class="arclab-heading-2">Research Projects</h2>
      <p class="arclab-text text-lg max-w-3xl mx-auto">
        Active and completed research projects exploring AI and robotics applications
      </p>
    </div>
    
    <!-- Featured Projects -->
    <div class="mb-16">
      <h3 class="text-2xl font-medium text-white mb-8 text-center arclab-slide-up" style="animation-delay: 0.2s;">Featured Projects</h3>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {featuredProjects.map((project, index) => (
          <div class="project-card arclab-card hover:scale-105 transition-all duration-300 arclab-slide-up" style={`animation-delay: ${index * 0.2}s;`}>
            <!-- Media section -->
            {project.media && (
              <div class="relative mb-6 overflow-hidden rounded-lg">
                {project.media.type === 'video' ? (
                  <div class="relative aspect-video">
                    <video 
                      class="w-full h-full object-cover"
                      poster={project.media.poster}
                      muted
                      loop
                      playsinline
                      onmouseenter="this.play()"
                      onmouseleave="this.pause()"
                    >
                      <source src={project.media.url} type="video/mp4" />
                    </video>
                    <div class="absolute inset-0 flex items-center justify-center opacity-70 hover:opacity-0 transition-opacity">
                      <div class="w-16 h-16 bg-black/50 rounded-full flex items-center justify-center backdrop-blur-sm">
                        <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
                        </svg>
                      </div>
                    </div>
                  </div>
                ) : (
                  <div class="relative aspect-video">
                    <img 
                      src={project.media.url} 
                      alt={project.title}
                      class="w-full h-full object-cover"
                    />
                  </div>
                )}
              </div>
            )}
            
            <!-- Content -->
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <span class="px-3 py-1 text-xs font-medium text-white rounded-full bg-cyan-600">
                  Research Project
                </span>
                <span class={`px-2 py-1 text-xs font-medium rounded-full ${
                  project.status === 'active' ? 'text-green-300 bg-green-600/20 border border-green-500/30' : 
                  'text-gray-300 bg-gray-600/20 border border-gray-500/30'
                }`}>
                  {project.status}
                </span>
              </div>
              
              <h3 class="arclab-heading-3 text-lg">{project.title}</h3>
              <p class="arclab-text text-sm leading-relaxed">{project.shortDescription}</p>
              
              <!-- Technologies -->
              <div class="flex flex-wrap gap-2">
                {project.technologies.slice(0, 4).map(tech => (
                  <span class="venue-tag text-xs">{tech}</span>
                ))}
              </div>
              
              <!-- Action buttons -->
              <div class="flex flex-wrap gap-2 pt-2">
                {project.links?.github && (
                  <a href={project.links.github} target="_blank" class="arclab-button arclab-button-small">
                    <i class="fab fa-github"></i>
                    Code
                  </a>
                )}
                {project.links?.demo && (
                  <a href={project.links.demo} target="_blank" class="arclab-button-secondary arclab-button-small">
                    <i class="fas fa-play"></i>
                    Demo
                  </a>
                )}
                {project.links?.paper && (
                  <a href={project.links.paper} target="_blank" class="arclab-button-secondary arclab-button-small">
                    <i class="fas fa-file-pdf"></i>
                    Paper
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <!-- Other Projects -->
    <div>
      <h3 class="text-2xl font-medium text-white mb-8 text-center arclab-slide-up" style="animation-delay: 0.4s;">Additional Projects</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        {otherProjects.map((project, index) => (
          <div class="project-card arclab-card hover:scale-105 transition-all duration-300 arclab-slide-up" style={`animation-delay: ${(index + 2) * 0.1}s;`}>
            <!-- Media section -->
            {project.media && (
              <div class="relative mb-4 overflow-hidden rounded-lg">
                <div class="relative aspect-video">
                  <img 
                    src={project.media.url} 
                    alt={project.title}
                    class="w-full h-full object-cover"
                  />
                </div>
              </div>
            )}
            
            <!-- Content -->
            <div class="space-y-3">
              <div class="flex items-center justify-between">
                <span class="px-3 py-1 text-xs font-medium text-white rounded-full bg-cyan-600">
                  Research Project
                </span>
                <span class={`px-2 py-1 text-xs font-medium rounded-full ${
                  project.status === 'active' ? 'text-green-300 bg-green-600/20 border border-green-500/30' : 
                  'text-gray-300 bg-gray-600/20 border border-gray-500/30'
                }`}>
                  {project.status}
                </span>
              </div>
              
              <h4 class="text-lg font-medium text-white">{project.title}</h4>
              <p class="arclab-text text-sm leading-relaxed">{project.shortDescription}</p>
              
              <!-- Technologies -->
              <div class="flex flex-wrap gap-2">
                {project.technologies.slice(0, 3).map(tech => (
                  <span class="venue-tag text-xs">{tech}</span>
                ))}
              </div>
              
              <!-- Action buttons -->
              <div class="flex flex-wrap gap-2">
                {project.links?.github && (
                  <a href={project.links.github} target="_blank" class="arclab-button arclab-button-small">
                    <i class="fab fa-github"></i>
                    Code
                  </a>
                )}
                {project.links?.paper && (
                  <a href={project.links.paper} target="_blank" class="arclab-button-secondary arclab-button-small">
                    <i class="fas fa-file-pdf"></i>
                    Paper
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .project-card {
    background: linear-gradient(135deg, rgba(15, 20, 25, 0.8), rgba(26, 35, 50, 0.6));
    border: 1px solid rgba(59, 130, 246, 0.2);
  }
  
  .project-card:hover {
    border-color: rgba(59, 130, 246, 0.5);
  }
  
  .aspect-video {
    aspect-ratio: 16 / 9;
  }
</style>