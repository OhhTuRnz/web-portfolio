---
export interface Props {
  project: {
    id: string;
    title: string;
    description: string;
    shortDescription: string;
    technologies: string[];
    category: string;
    status: string;
    media?: {
      type: string;
      url: string;
      poster?: string;
      thumbnail?: string;
      fallback?: string; // YouTube thumbnail for static display
    };
