---
import { scholarProfile, getTotalCitations } from '../data/publications.js';

const totalCitations = getTotalCitations();
---

<div class="scholar-profile arclab-card">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h3 class="arclab-heading-3">Research Metrics</h3>
      <p class="arclab-text text-sm">
        <a href={scholarProfile.profileUrl} target="_blank" class="arclab-text-accent hover:underline">
          View Google Scholar Profile â†’
        </a>
      </p>
    </div>
    <div class="text-right">
      <div class="text-2xl font-bold text-white">{totalCitations}</div>
      <div class="text-sm arclab-text">Total Citations</div>
    </div>
  </div>
  
  <div class="grid grid-cols-3 gap-4 text-center">
    <div>
      <div class="text-xl font-semibold text-white">{scholarProfile.hIndex}</div>
      <div class="text-xs arclab-text">h-index</div>
    </div>
    <div>
      <div class="text-xl font-semibold text-white">{scholarProfile.i10Index}</div>
      <div class="text-xs arclab-text">i10-index</div>
    </div>
    <div>
      <div class="text-xl font-semibold text-white">4</div>
      <div class="text-xs arclab-text">Publications</div>
    </div>
  </div>
  
  <div class="mt-4 pt-4 border-t border-slate-700/30">
    <p class="text-xs arclab-text text-center">
      Research focus: Space Robotics, LLMs, Autonomous Systems
    </p>
  </div>
</div>

<style>
  .scholar-profile {
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(6, 182, 212, 0.1));
  }
</style>