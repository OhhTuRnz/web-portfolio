<section id="achievements" class="py-20 bg-slate-800/30 relative">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16 animate-slide-up">
        <h2 class="text-4xl font-light mb-4 text-white">
          Awards & Recognition
        </h2>
        <p class="text-xl text-gray-400 max-w-3xl mx-auto">
          Honors and achievements recognizing contributions to AI and robotics research
        </p>
      </div>
      
      <!-- Timeline -->
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-blue-500 via-purple-500 to-cyan-500 rounded-full"></div>
        
