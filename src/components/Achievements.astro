                <a 
                  href={achievement.link} 
                  target="_blank"
                  class="block bg-slate-800/40 backdrop-blur-sm rounded-xl p-6 border border-slate-700/30 hover:border-blue-500/50 transition-all duration-300 hover:transform hover:scale-105 group"
                >
