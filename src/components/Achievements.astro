                    <div class={`w-12 h-12 bg-gradient-to-br ${achievement.color} rounded-full flex items-center justify-center text-white text-xl shadow-lg`}>
                      {achievement.icon}
                    </div>
                    <div>
                      <h3 class="text-lg font-medium text-white group-hover:text-blue-400 transition-colors">
                        {achievement.title}
                      </h3>
                      <p class="text-sm text-gray-400">{achievement.organization}</p>
                    </div>
                  </div>
                  <p class="text-gray-300 text-sm leading-relaxed">{achievement.description}</p>
                </a>
              </div>
              
              <!-- Timeline dot -->
              <div class="w-2/12 flex justify-center">
                <div class="w-6 h-6 bg-white rounded-full border-4 border-slate-800 shadow-lg z-10 relative">
                  <div class="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-slate-800 text-white px-3 py-1 rounded-full text-sm font-medium whitespace-nowrap">
                    {achievement.year}
                  </div>
                </div>
              </div>
              
              <!-- Spacer -->
              <div class="w-5/12"></div>
            </div>
          ))}
