---
const researchAreas = [
  {
    title: "Large Language Models & Autonomous Agents",
    description: "Developing AI systems that can reason, plan, and execute complex tasks autonomously. Focus on integrating LLMs with robotic control systems for enhanced decision-making capabilities in space and terrestrial environments.",
    image: "https://images.pexels.com/photos/8386440/pexels-photo-8386440.jpeg?auto=compress&cs=tinysrgb&w=800",
    technologies: ["PyTorch", "Transformers", "ROS2", "Python", "Reinforcement Learning"]
  },
  {
    title: "Robotic Teleoperation & Human-Robot Interaction",
    description: "Advanced teleoperation systems for complex manipulation tasks. Research on haptic feedback, shared autonomy, and intuitive control interfaces for space and terrestrial applications with focus on operator performance.",
    image: "https://images.pexels.com/photos/2599244/pexels-photo-2599244.jpeg?auto=compress&cs=tinysrgb&w=800",
    technologies: ["ROS", "C++", "MATLAB", "Haptic Devices", "Real-time Systems"]
  },
  {
    title: "Space Robotics & Autonomous Systems",
    description: "Developing robust AI systems for space exploration missions. Focus on autonomous navigation, resource utilization, and multi-robot coordination in extreme environments with limited communication.",
    image: "https://images.pexels.com/photos/586063/pexels-photo-586063.jpeg?auto=compress&cs=tinysrgb&w=800",
    technologies: ["Reinforcement Learning", "Computer Vision", "SLAM", "Mission Planning", "Orbital Mechanics"]
  }
];
---

<section id="research" class="arclab-section bg-gradient-to-b from-slate-900 to-slate-800">
  <div class="arclab-container">
    <div class="text-center mb-16 arclab-fade-in">
      <h2 class="arclab-heading-2">Research Focus Areas</h2>
      <p class="arclab-text text-lg max-w-3xl mx-auto">
        Exploring the intersection of artificial intelligence and robotics to create intelligent systems for space exploration and terrestrial applications
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {researchAreas.map((area, index) => (
        <div class="research-card arclab-card arclab-slide-up" style={`animation-delay: ${index * 0.2}s;`}>
          <!-- Image Header -->
          <div class="relative h-48 overflow-hidden rounded-lg mb-6">
            <img 
              src={area.image} 
              alt={area.title}
              class="w-full h-full object-cover transition-transform duration-700 hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 to-transparent"></div>
          </div>
          
          <!-- Content -->
          <div class="space-y-4">
            <h3 class="arclab-heading-3 text-lg">{area.title}</h3>
            <p class="arclab-text text-sm leading-relaxed">{area.description}</p>
            
            <!-- Technologies -->
            <div class="space-y-2">
              <h4 class="text-sm font-medium arclab-text-accent">Key Technologies</h4>
              <div class="flex flex-wrap gap-2">
                {area.technologies.map(tech => (
                  <span class="venue-tag text-xs">{tech}</span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .research-card {
    background: linear-gradient(135deg, rgba(15, 20, 25, 0.8), rgba(26, 35, 50, 0.6));
    border: 1px solid rgba(59, 130, 246, 0.2);
  }
  
  .research-card:hover {
    border-color: rgba(59, 130, 246, 0.5);
    transform: translateY(-4px);
  }
</style>