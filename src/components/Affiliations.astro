---
const affiliations = [
  {
    name: 'Massachusetts Institute of Technology',
    shortName: 'MIT',
    logo: '/src/assets/logos/MIT_logo.svg',
    role: 'Master\'s Student',
    period: '2025 - Present',
    link: 'https://mit.edu',
    current: true
  },
  {
    name: 'MIT Astrodynamics, Space Robotics, and Controls Lab (ARC Lab)',
    shortName: 'MIT ARC Lab',
    logo: '/src/assets/logos/mit-arclab-logo.jpg',
    role: 'Research Assistant',
    period: '2024 - Present',
    link: 'https://aeroastro.mit.edu/arclab/',
    current: true
  },
  {
    name: 'ETSISI - Universidad Polit√©cnica de Madrid',
    shortName: 'ETSISI - UPM',
    logo: '/src/assets/logos/etsisi-logo.png',
    role: 'Bachelor\'s in Software Engineering (Computer Science)',
    period: '2020 - 2023',
    link: 'https://etsisi.upm.es',
    current: false
  }
];
---

<section id="affiliations" class="arclab-section bg-slate-900/30">
  <div class="arclab-container">
    <div class="text-center mb-16 arclab-fade-in">
      <h2 class="arclab-heading-2">Academic & Professional Affiliations</h2>
      <p class="arclab-text text-lg max-w-3xl mx-auto">
        Educational background and research positions that have shaped my academic journey
      </p>
    </div>
    
    <!-- Current Affiliations -->
    <div class="mb-16">
      <h3 class="text-2xl font-medium text-white mb-8 text-center arclab-slide-up" style="animation-delay: 0.2s;">Current</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {affiliations.filter(aff => aff.current).map((affiliation, index) => (
          <a 
            href={affiliation.link} 
            target="_blank"
            class="affiliation-card group arclab-card hover:scale-105 transition-all duration-300 arclab-slide-up"
            style={`animation-delay: ${(index + 1) * 0.2}s;`}
          >
            <div class="flex items-center space-x-6">
              <div class="flex-shrink-0">
                <img 
                  src={affiliation.logo} 
                  alt={affiliation.name}
                  class="w-20 h-20 object-contain rounded-lg bg-white/10 p-2 group-hover:bg-white/20 transition-all"
                />
              </div>
              <div class="flex-1">
                <h4 class="text-xl font-medium text-white group-hover:arclab-text-accent transition-colors mb-2">
                  {affiliation.name}
                </h4>
                <p class="arclab-text mb-1">{affiliation.role}</p>
                <p class="text-sm arclab-text-accent">{affiliation.period}</p>
              </div>
              <div class="flex-shrink-0">
                <i class="fas fa-external-link-alt arclab-text group-hover:text-white transition-colors"></i>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
    
    <!-- Education -->
    <div>
      <h3 class="text-2xl font-medium text-white mb-8 text-center arclab-slide-up" style="animation-delay: 0.4s;">Education</h3>
      <div class="grid grid-cols-1 gap-8 max-w-2xl mx-auto">
        {affiliations.filter(aff => !aff.current).map((affiliation, index) => (
          <a 
            href={affiliation.link} 
            target="_blank"
            class="affiliation-card group arclab-card hover:scale-105 transition-all duration-300 arclab-slide-up"
            style={`animation-delay: ${(index + 3) * 0.2}s;`}
          >
            <div class="flex items-center space-x-6">
              <div class="flex-shrink-0">
                <img 
                  src={affiliation.logo} 
                  alt={affiliation.name}
                  class="w-20 h-20 object-contain rounded-lg bg-white/5 p-2 group-hover:bg-white/10 transition-all"
                />
              </div>
              <div class="flex-1">
                <h4 class="text-xl font-medium text-white group-hover:text-purple-400 transition-colors mb-2">
                  {affiliation.name}
                </h4>
                <p class="arclab-text mb-1">{affiliation.role}</p>
                <p class="text-sm text-purple-400">{affiliation.period}</p>
              </div>
              <div class="flex-shrink-0">
                <i class="fas fa-external-link-alt arclab-text group-hover:text-white transition-colors"></i>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .affiliation-card {
    background: linear-gradient(135deg, rgba(15, 20, 25, 0.8), rgba(26, 35, 50, 0.6));
    border: 1px solid rgba(59, 130, 246, 0.2);
  }
  
  .affiliation-card:hover {
    border-color: rgba(59, 130, 246, 0.5);
  }
</style>