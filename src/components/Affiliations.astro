---
const affiliations = [
  {
    name: 'Massachusetts Institute of Technology',
    shortName: 'MIT',
    logo: '/src/assets/logos/MIT_logo.svg',
    role: 'PhD Candidate',
    period: '2022 - Present',
    link: 'https://mit.edu',
    current: true
  },
  {
    name: 'MIT ArcLab',
    shortName: 'ArcLab',
    logo: '/src/assets/logos/mit-arclab-logo.jpg',
    role: 'Research Assistant',
    period: 'Autonomous Systems & Robotics',
    link: 'https://arclab.mit.edu',
    current: true
  },
  {
    name: 'Universidad Polit√©cnica de Madrid',
    shortName: 'UPM',
    logo: '/src/assets/logos/upm-logo.png',
    role: 'Master\'s Degree',
    period: '2020 - 2022',
    link: 'https://upm.es',
    current: false
  },
  {
    name: 'ETSISI - UPM',
    shortName: 'ETSISI',
    logo: '/src/assets/logos/etsisi-logo.png',
    role: 'Bachelor\'s Degree',
    period: '2016 - 2020',
    link: 'https://etsisi.upm.es',
    current: false
  }
];
---

<section id="affiliations" class="py-20 bg-slate-900/30 relative">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16 animate-slide-up">
        <h2 class="text-4xl font-light mb-4 text-white">
          Institutional Affiliations
        </h2>
        <p class="text-xl text-gray-400 max-w-3xl mx-auto">
          Academic and research institutions that have shaped my journey
        </p>
      </div>
      
      <!-- Current Affiliations -->
      <div class="mb-16">
        <h3 class="text-2xl font-medium text-white mb-8 text-center animate-slide-up" style="animation-delay: 0.2s;">Current</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {affiliations.filter(aff => aff.current).map((affiliation, index) => (
            <a 
              href={affiliation.link} 
              target="_blank"
              class="affiliation-card group bg-slate-800/40 backdrop-blur-sm rounded-xl p-8 border border-slate-700/30 hover:border-blue-500/50 transition-all duration-300 hover:transform hover:scale-105 animate-slide-up"
              style={`animation-delay: ${(index + 1) * 0.2}s;`}
            >
              <div class="flex items-center space-x-6">
                <div class="flex-shrink-0">
                  <img 
                    src={affiliation.logo} 
                    alt={affiliation.name}
                    class="w-20 h-20 object-contain rounded-lg bg-white/10 p-2 group-hover:bg-white/20 transition-all"
                  />
                </div>
                <div class="flex-1">
                  <h4 class="text-xl font-medium text-white group-hover:text-blue-400 transition-colors mb-2">
                    {affiliation.name}
                  </h4>
                  <p class="text-gray-400 mb-1">{affiliation.role}</p>
                  <p class="text-sm text-blue-400">{affiliation.period}</p>
                </div>
                <div class="flex-shrink-0">
                  <i class="fas fa-external-link-alt text-gray-400 group-hover:text-white transition-colors"></i>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
      
      <!-- Past Affiliations -->
      <div>
        <h3 class="text-2xl font-medium text-white mb-8 text-center animate-slide-up" style="animation-delay: 0.4s;">Education</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {affiliations.filter(aff => !aff.current).map((affiliation, index) => (
            <a 
              href={affiliation.link} 
              target="_blank"
              class="affiliation-card group bg-slate-800/20 backdrop-blur-sm rounded-xl p-8 border border-slate-700/20 hover:border-purple-500/30 transition-all duration-300 hover:transform hover:scale-105 animate-slide-up"
              style={`animation-delay: ${(index + 3) * 0.2}s;`}
            >
              <div class="flex items-center space-x-6">
                <div class="flex-shrink-0">
                  <img 
                    src={affiliation.logo} 
                    alt={affiliation.name}
                    class="w-20 h-20 object-contain rounded-lg bg-white/5 p-2 group-hover:bg-white/10 transition-all"
                  />
                </div>
                <div class="flex-1">
                  <h4 class="text-xl font-medium text-white group-hover:text-purple-400 transition-colors mb-2">
                    {affiliation.name}
                  </h4>
                  <p class="text-gray-400 mb-1">{affiliation.role}</p>
                  <p class="text-sm text-purple-400">{affiliation.period}</p>
                </div>
                <div class="flex-shrink-0">
                  <i class="fas fa-external-link-alt text-gray-400 group-hover:text-white transition-colors"></i>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .affiliation-card {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>